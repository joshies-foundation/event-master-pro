{
  "name": "joshies",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host=0.0.0.0",
    "build": "ng build",
    "prebuild": "node src/set-last-updated-date.mjs pre",
    "postbuild": "node src/set-last-updated-date.mjs post",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "format": "prettier --write .",
    "postinstall": "patch-package",
    "lint": "ng lint",
    "lint-staged": "lint-staged",
    "generate-db-types": "dotenv -- sh -c 'supabase gen types typescript --project-id \"$NG_APP_SUPABASE_PROJECT_ID\" --schema public > src/app/shared/util/schema.ts && prettier --write src/app/shared/util/schema.ts'"
  },
  "private": true,
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "singleQuote": true,
    "tailwindStylesheet": "./src/styles.css"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "*.{ts,js,tsx,jsx,css,scss,sass,json,md,yml,yaml,html}": "prettier --write",
    "*.ts": "eslint --fix"
  },
  "dependencies": {
    "@angular/animations": "^20.1.3",
    "@angular/cdk": "^20.1.3",
    "@angular/common": "^20.1.3",
    "@angular/compiler": "^20.1.3",
    "@angular/core": "^20.1.3",
    "@angular/forms": "^20.1.3",
    "@angular/platform-browser": "^20.1.3",
    "@angular/platform-browser-dynamic": "^20.1.3",
    "@angular/router": "^20.1.3",
    "@angular/service-worker": "^20.1.3",
    "@primeuix/themes": "^1.2.1",
    "@supabase/supabase-js": "^2.52.1",
    "@tailwindcss/postcss": "^4.1.11",
    "chart.js": "^4.5.0",
    "chartjs-plugin-datalabels": "^2.2.0",
    "patch-package": "^8.0.0",
    "postcss": "^8.5.6",
    "primeicons": "7.0.0",
    "primeng": "20.0.0",
    "quill": "2.0.2",
    "rxjs": "~7.8.2",
    "tailwindcss": "^4.1.11",
    "tailwindcss-primeui": "^0.6.1",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.1.3",
    "@angular-devkit/core": "^20.1.3",
    "@angular-eslint/builder": "20.1.1",
    "@angular-eslint/eslint-plugin": "20.1.1",
    "@angular-eslint/eslint-plugin-template": "20.1.1",
    "@angular-eslint/schematics": "20.1.1",
    "@angular-eslint/template-parser": "20.1.1",
    "@angular/cli": "^20.1.3",
    "@angular/compiler-cli": "^20.1.3",
    "@eslint/js": "^9.32.0",
    "@ngx-env/builder": "^20.1.0",
    "@types/jasmine": "~5.1.8",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "dotenv-cli": "^9.0.0",
    "eslint": "^9.32.0",
    "hono": "^4.8.9",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.1.2",
    "pre-commit": "^1.2.2",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.6.14",
    "supabase": "^2.31.8",
    "typescript": "~5.8.3"
  },
  "engines": {
    "node": "22",
    "npm": "10"
  }
}

{
  "name": "joshies",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host=0.0.0.0",
    "build": "ng build",
    "prebuild": "node src/set-last-updated-date.mjs pre",
    "postbuild": "node src/set-last-updated-date.mjs post",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "format": "prettier --write .",
    "postinstall": "patch-package",
    "lint": "ng lint",
    "lint-staged": "lint-staged",
    "generate-db-types": "dotenv -- sh -c 'supabase gen types typescript --project-id \"$NG_APP_SUPABASE_PROJECT_ID\" --schema public > src/app/shared/util/schema.ts && prettier --write src/app/shared/util/schema.ts'"
  },
  "private": true,
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "singleQuote": true,
    "tailwindStylesheet": "./src/styles.css"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "*.{ts,js,tsx,jsx,css,scss,sass,json,md,yml,yaml,html}": "prettier --write",
    "*.ts": "eslint --fix"
  },
  "dependencies": {
    "@angular/animations": "^21.1.2",
    "@angular/cdk": "^21.1.2",
    "@angular/common": "^21.1.2",
    "@angular/compiler": "^21.1.2",
    "@angular/core": "^21.1.2",
    "@angular/forms": "^21.1.2",
    "@angular/platform-browser": "^21.1.2",
    "@angular/platform-browser-dynamic": "^21.1.2",
    "@angular/router": "^21.1.2",
    "@angular/service-worker": "^21.1.2",
    "@primeuix/themes": "^2.0.3",
    "@supabase/supabase-js": "^2.93.3",
    "@tailwindcss/postcss": "^4.1.18",
    "chart.js": "^4.5.1",
    "chartjs-plugin-datalabels": "^2.2.0",
    "patch-package": "^8.0.1",
    "postcss": "^8.5.6",
    "primeicons": "7.0.0",
    "primeng": "21.1.1",
    "quill": "2.0.2",
    "rxjs": "~7.8.2",
    "tailwindcss": "^4.1.18",
    "tailwindcss-primeui": "^0.6.1",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.1.2",
    "@angular-devkit/core": "^21.1.2",
    "@angular-eslint/builder": "21.2.0",
    "@angular-eslint/eslint-plugin": "21.2.0",
    "@angular-eslint/eslint-plugin-template": "21.2.0",
    "@angular-eslint/schematics": "21.2.0",
    "@angular-eslint/template-parser": "21.2.0",
    "@angular/cli": "^21.1.2",
    "@angular/compiler-cli": "^21.1.2",
    "@eslint/js": "^9.39.2",
    "@ngx-env/builder": "^21.0.1",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.2",
    "hono": "^4.11.7",
    "lint-staged": "^16.2.7",
    "pre-commit": "^1.0.10",
    "prettier": "3.8.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "supabase": "^2.74.4",
    "typescript": "~5.9.3"
  },
  "engines": {
    "node": "24",
    "npm": "11"
  }
}
